{
  "manifest_version": 2,

  "name": "WB dev",
  "description": "плагин для вёрстки и тестирования проекта wildberries",
  "version": "1.2",

  "permissions": [ "tabs", "<all_urls>", "activeTab", "fileSystem", "browsingData", "clipboard", "clipboardRead"],

  "browser_action": {
    "default_icon": {
      "19": "images/ico19.png"
    },
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/ico16.png",
    "48": "images/ico48.png",
    "128": "images/ico128.png"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  }
}